                    <span className="text-3xl font-bold text-gray-900">‚Ç¨{plan.price}</span>
                    <span className="text-sm text-gray-500">/mes</span>
                    <div className="text-sm text-gray-400">‚Ç¨{plan.pricePerProp.toFixed(2)} por propiedad</div>
                  </div>
                  <div className="mb-6">
                    <div className="text-sm text-gray-600 mb-3">Hasta {plan.maxProps} propiedades</div>
                    <div className="space-y-2 text-sm text-gray-600">
                      <div className="flex items-center">
                        <Check className="w-4 h-4 text-green-500 mr-2" />
                        QR codes ilimitados
                      </div>
                      <div className="flex items-center">
                        <Check className="w-4 h-4 text-green-500 mr-2" />
                        Gu√≠as digitales completas
                      </div>
                      <div className="flex items-center">
                        <Check className="w-4 h-4 text-green-500 mr-2" />
                        Analytics b√°sicas
                      </div>
                      <div className="flex items-center">
                        <Check className="w-4 h-4 text-green-500 mr-2" />
                        Trial 15 d√≠as gratis
                      </div>
                    </div>
                  </div>
                  <Link
                    href="/register"
                    className={`w-full py-2 px-4 rounded-md font-medium transition-colors inline-block text-center ${
                      plan.recommended
                        ? 'bg-[#FF385C] hover:bg-[#E31C5F] text-white'
                        : 'bg-gray-600 hover:bg-gray-700 text-white'
                    }`}
                  >
                    Comenzar Trial
                  </Link>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      {/* Testimonials - Clean */}
      <section className="py-24 bg-white px-6">
        <div className="max-w-6xl mx-auto">
          <div className="text-center mb-16">
            <h2 className="text-4xl sm:text-5xl lg:text-6xl font-normal text-gray-900 mb-6">
              Lo que dicen nuestros hosts
            </h2>
          </div>

          <div className="grid lg:grid-cols-3 gap-12">
            {testimonials.map((testimonial, index) => (
              <div key={index} className="space-y-6">
                <div className="flex items-center space-x-4">
