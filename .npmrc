# Optimize npm for CI/CD
prefer-offline=true
no-audit=true
progress=false
fund=false
loglevel=error
legacy-peer-deps=true

# Cache configuration
cache=/tmp/.npm

# Registry configuration
registry=https://registry.npmjs.org/

# Build optimizations
node-options=--max-old-space-size=4096

# Prevent EBUSY errors
force=true